<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>Sharingan.Providers.Encrypted</PackageId>
        <Summary>Encryption wrapper provider for Sharingan</Summary>
        <Description>Provides transparent encryption for any Sharingan settings provider. Supports multiple encryption strategies including DPAPI (Windows Data Protection API) for machine/user-scoped encryption and AES-256-GCM for cross-platform symmetric encryption. Ideal for storing sensitive settings like API keys, connection strings, and user credentials.</Description>
        <IsPackable>true</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Sharingan\Sharingan.csproj" />
    </ItemGroup>

    <!-- Optional DPAPI support for Windows -->
    <ItemGroup Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net7.0'))">
        <PackageReference Include="Microsoft.AspNetCore.DataProtection" Version="10.0.1" />
    </ItemGroup>

</Project>