<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>Sharingan.Providers.Yaml</PackageId>
        <Summary>YAML file settings provider for Sharingan</Summary>
        <Description>Stores application settings in YAML (YAML Ain't Markup Language) format. Provides a clean, readable configuration format with support for complex nested structures, lists, and multi-line strings. Popular choice for cloud-native and DevOps applications. Includes multi-process safety with file locking.</Description>
        <IsPackable>true</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Sharingan\Sharingan.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="YamlDotNet" Version="16.3.0" />
    </ItemGroup>

</Project>