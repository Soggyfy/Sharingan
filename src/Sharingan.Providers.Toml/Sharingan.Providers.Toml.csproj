<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>Sharingan.Providers.Toml</PackageId>
        <Summary>TOML file settings provider for Sharingan</Summary>
        <Description>Stores application settings in TOML (Tom's Obvious Minimal Language) format. Provides a clean, human-friendly configuration format with support for tables, arrays, dates, and nested structures. Popular choice for modern applications and developer tools. Includes multi-process safety with file locking.</Description>
        <IsPackable>true</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Sharingan\Sharingan.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Tomlyn" Version="0.19.0" />
    </ItemGroup>

</Project>